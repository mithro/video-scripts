# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

# title of the session 
sessionname tracker-scripts

hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}'

screen -t A-core bash -c 'vcore.sh'
screen -t B-gui bash -c 'sleep 1;vui.sh'
screen -t C-hu bash -c 'sleep 1;hdmi2usb-v4l.sh'
screen -t D-t1 bash -c 'sleep 1;source-avsync-test-clip-looped-as-cam-x.sh 1'
screen -t E-t2 bash -c 'sleep 1;source-avsync-test-clip-looped-as-cam-x.sh 2'
screen -t F-save bash -c 'sleep 1;record-timestamp.sh'
screen -t G-cut bash -c 'sleep 1;generate-cut-list.sh'

